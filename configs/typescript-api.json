{
  "directories": {
    "src": {
      "baseDir": "src",
      "subDir": ["config", "controllers", "services", "models"]
    },
    "scripts": {
      "baseDir": "scripts"
    }
  },
  "commands": {
    "npm-init": {
      "base": "npm",
      "arguments": ["init", "-y"]
    },
    "tsc-init": {
      "base": "tsc",
      "arguments": ["--init"]
    }
  },
  "files": {
    "eslintr": {
      "name": ".eslintrc",
      "directory": "./"
    }
  }
}
